extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign In

        // register form
        form(method='POST' action='/login')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button#loginSubmit.btn.btn-primary(type='submit') Sign In